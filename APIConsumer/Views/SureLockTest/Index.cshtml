@model IEnumerable<APIConsumer.Models.Lock>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <dl class="row">
        <dt class="col-sm-4">
    <a asp-action="Create">Create New</a> 
    </dt>
        <dt class="col-sm-6">
            <form id="frmSearch">Name <input id="txtSearch" /> <input type="button" id="btnSearch" value="Search" onclick="JSSearch();"/>
            </form>
            </dt>
    </dl>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.image_urls)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.is_active)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.created_at)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.updated_at)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
         @foreach (var item in Model) {
            if (item is not null && item.is_active)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.price)
                    </td>
                    <td>
                        @{
                            var itemValue = (item.image_urls is null) ? "" : item.image_urls.ToString();
                            Html.DisplayFor(modelItem => itemValue);
                        }
                    </td>
            <td>
                @Html.DisplayFor(modelItem => item.quantity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.is_active)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.created_at)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.updated_at)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new {  id=@item.id }) |
                @Html.ActionLink("Detail", "Details", new {id=@item.id }) |
                @Html.ActionLink("Del", "Delete", new { id=@item.id })
            </td>
        </tr>
        }
    }
    </tbody>
</table>

@section MyScripts
    {
    <script type="text/javascript" src='@Url.Content("~/js/SureLockScript.js")'></script>
}


